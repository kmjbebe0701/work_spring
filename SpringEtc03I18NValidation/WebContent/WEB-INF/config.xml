<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	
	<!-- 1. 스프링 설정 범위 지정 -->
	<context:component-scan base-package="com.koitt" />
	
	<!-- 2. 국제화 빈 생성 -->
	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames" value="/WEB-INF/messages" />
	</bean>
	
	<!-- 3. 유효성 검증을 위한 빈 생성 -->
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean">
		<property name="validationMessageSource" ref="messageSource" />
	</bean>
	
	<!-- 4. 3번에서 만든 유효성 검증 빈을 validator 속성에 지정 -->
	<mvc:annotation-driven validator="validator" />
	
	<!-- 5. JSP 접두사, 접미사 붙여주는 ViewResolver -->
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/" />
		<property name="suffix" value=".jsp" />
	</bean>
	
	<!--
		6. 페이지 이동 전에 중간에 URL을 가로채서 lang 쿼리 문자열을 확인 한 뒤 
		해당 값에 따라 한국어로 표기할지 영어로 표기할지 결정
	 -->
	<mvc:interceptors>
		<bean id="localeChangerIntercepter" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
			<property name="paramName" value="lang" />
		</bean>
	</mvc:interceptors>
	
	<!-- 언어 설정값을 세션이 유지 될 동안 보관하기 위한 Resolver -->
	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver"></bean>
	
	
	
</beans>
