<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.koitt.board.model.Users">
  	<select id="select-all-users" resultType="Users">
  		SELECT * FROM users
  	</select>
  	
  	<insert id="insert-users" parameterType="Users">
  		INSERT INTO users (email, password, name, attachment)
  		VALUES (#{email}, #{password}, #{name}, #{attachment}) 
  	</insert>
  	
  	<select id="select-users" parameterType="String" resultType="Users">
  		SELECT * FROM users WHERE no = #{no}
  	</select>
  	
  	<select id="select-count-users" resultType="int">
  		SELECT COUNT(*) cnt FROM users
  	</select>
  	
  	<update id="update-users" parameterType="Users">
  		UPDATE users SET title = #{title}, content = #{content}, regdate = CURDATE(), attachment = #{attachment}
  		WHERE no = #{no}  
  	</update>
  	
  	<delete id="delete-users" parameterType="String">
  		DELETE FROM users WHERE no = #{no}
  	</delete>
  	
  </mapper>
  
  
  
  
  
  
  